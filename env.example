# =============================================================================
# Node.js 1M RPS Benchmark - Environment Variables
# Copy to .env and adjust as needed:
#   cp env.example .env
# Use with: API_PORT=3100 npm run api  (or load via dotenv, etc.)
# =============================================================================

# -----------------------------------------------------------------------------
# API Server (api/server.js)
# -----------------------------------------------------------------------------
API_PORT=3100
API_HOST=0.0.0.0

# Optional API key for authentication
# API_KEY=

# -----------------------------------------------------------------------------
# Dashboard (dashboard/index.js)
# -----------------------------------------------------------------------------
# API URL when running the dashboard (e.g. laptop connecting to remote server)
API_SERVER=http://localhost:3100

# Optional API key (must match API_KEY if set)
# API_KEY=

LOG_LEVEL=info

# Set to 1 to log dashboard output to console
# DASHBOARD_DEBUG=

# -----------------------------------------------------------------------------
# Redis (database/redis.js, frameworks)
# -----------------------------------------------------------------------------
# Enable Redis cluster mode (required for benchmarks with /code, /code-fast)
REDIS_CLUSTER=true

# Redis connection (defaults work for local Redis)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=7000

# -----------------------------------------------------------------------------
# Redis Agent (MANDATORY - API always uses the agent)
# -----------------------------------------------------------------------------
# Redis Agent URL - defaults to http://localhost:3200 if not set
# Set to remote URL when Redis is on a separate machine
REDIS_AGENT_URL=http://localhost:3200

# Redis host - set when using remote Redis (or derived from REDIS_AGENT_URL)
# REDIS_HOST=192.168.1.100

# Redis Agent configuration (when running npm run redis-agent)
# REDIS_AGENT_PORT=3200
# REDIS_AGENT_HOST=0.0.0.0

# Redis cluster data directory (default: redis-cluster/ in project root)
# Alternative: absolute path or relative to project root
# REDIS_CLUSTER_DIR=/var/lib/redis-cluster
